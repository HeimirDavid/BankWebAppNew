@page
@model BankWebApp.Pages.Users.EditModel
@{
}

<div class="container white-widget pb-1 mt-5">

    <h2 class="mt-3 pb-3">Edit User</h2>

    <hr class="mt-4" />

    <form method="post">
       <input hidden asp-for="@Model.editUserViewModel.Id"/>
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="form-group">
                    <label asp-for="@Model.editUserViewModel.Email"></label>
                    <input class="form-control" asp-for="@Model.editUserViewModel.Email">
                    <span asp-validation-for="@Model.editUserViewModel.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.editUserViewModel.PhoneNumber"></label>
                    <input class="form-control" asp-for="@Model.editUserViewModel.PhoneNumber">
                    <span asp-validation-for="@Model.editUserViewModel.PhoneNumber" class="text-danger"></span>
                </div>

                @*<div class="form-group">
                    <label asp-for="@Model.editUserViewModel.Password"></label>
                    <input class="form-control" asp-for="@Model.editUserViewModel.Password">
                    <span asp-validation-for="@Model.editUserViewModel.Password" class="text-danger"></span>
                </div>
*@
                 <div class="form-group">
                    @Html.CheckBoxFor(m => m.editUserViewModel.AdminRole)
                    <label asp-for="@Model.editUserViewModel.AdminRole"></label>
                    <span asp-validation-for="@Model.editUserViewModel.AdminRole" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.CheckBoxFor(m => m.editUserViewModel.CashierRole)
                    <label asp-for="@Model.editUserViewModel.CashierRole"></label>
                    <span asp-validation-for="@Model.editUserViewModel.CashierRole" class="text-danger"></span>
                </div>

            </div>   
        </div>

        <button type="submit" class="btn btn-success mb-4 mt-2">Edit User</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}