@page
@model BankWebApp.Pages.Customers.AccountModel
@{
}



<div class="container">
    <div class="white-widget pb-1 mt-5">
    <h2 class="mt-3 pb-3 pl-2-rem">Transactions - @Model.AccountAndTransactions.CustomerName</h2>

    <hr class="mt-4" />
    <dl class="row mt-2 pl-2">
        <dt class="col-md-3 col-5 text-key">Account No</dt>
        <dd class="col-md-9 col-6 text-value">@Model.AccountAndTransactions.AccountId</dd>

        <dt class="col-md-3 col-5 text-key">Created Date</dt>
        <dd class="col-md-9 col-6 text-value">@Model.AccountAndTransactions.Created</dd>

        <dt class="col-md-3 col-5 text-key">Balance</dt>
        <dd class="col-md-9 col-6 text-value">@Model.AccountAndTransactions.Balance</dd>


    </dl>
</div>

<div class="white-widget pb-1 mt-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="text-key">
                    Account-ID
                </th>
                <th class="text-key">
                    Date
                </th>
                <th>
                    Type
                </th class="text-key">
                <th>
                    Operation
                </th class="text-key">
                <th>
                    Amount
                </th class="text-key">
                <th>
                    Balance
                </th class="text-key">
        </thead>
        <tbody>@foreach (var item in Model.AccountAndTransactions.Transactions)
                {
                <tr>
                    <td>
                        @item.AccountId
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @item.Operation
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.Balance
                    </td>
                    @*<td>
                        <a class="btn btn-primary" asp-page="/Customers/Account" asp-route-accountId="@item.AccountId" asp-route-customerId="@Model.Customer.Id">View</a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

